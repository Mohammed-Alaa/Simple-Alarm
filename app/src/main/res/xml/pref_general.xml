<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">


    <PreferenceCategory android:title="Display Settings">

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/citylistentries"
            android:entryValues="@array/citylistvalues"
            android:key="@string/city_name"
            android:summary="@string/citysamary"
            android:title="@string/city" />

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/athanlistentries"
            android:entryValues="@array/athanlistvalues"
            android:key="@string/athan_sound"
            android:summary="@string/nasser_elqatamy"
            android:title="@string/athan_sound" />


    </PreferenceCategory>

    <PreferenceCategory android:title="Notification Settings">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/vibrate_pref"
            android:summary="Vibrate on notification"
            android:title="Vibrate" />

        <RingtonePreference
            android:key="@string/ringtone_pref"
            android:ringtoneType="all"
            android:showDefault="true"
            android:showSilent="false"
            android:summary="Default"
            android:title="Set Ringtone" />

    </PreferenceCategory>

</PreferenceScreen>