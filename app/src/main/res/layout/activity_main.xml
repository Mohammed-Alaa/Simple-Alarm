<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mohammed.myapplication.MainActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal|center_vertical"
        android:onClick="setAlarm"
        android:textSize="25sp"
        android:id="@+id/text_clock"
        android:text="@string/set_clock"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Stop"
        android:id="@+id/btn_stop"
        android:onClick="cancelAlarm"
        android:layout_gravity="center_horizontal"
        android:layout_margin="25dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:textSize="40sp"
        android:id="@+id/text_zekr"
        android:layout_weight="2"

        />



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            tools:context=".BilalActivity">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:id="@+id/textViewCity"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="1dp"
                    android:layout_span="3" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">
                <Space
                    android:layout_width="20dp"
                    android:layout_height="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text=""
                    android:id="@+id/textViewDate"
                    android:layout_gravity="center_horizontal"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_span="3" />
            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">
                <Space
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:layout_margin="1dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fajr"
                    android:id="@+id/textViewFajrEN"
                    android:layout_column="0"
                    android:gravity="left|top"
                    android:width="90dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="1dp"
                    android:layout_gravity="left|top" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:id="@+id/textViewFajr"
                    android:gravity="center_horizontal|top"
                    android:layout_column="1"
                    android:width="90dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:text="@string/fajr_ar"
                    android:id="@+id/textViewFajrAR"
                    android:gravity="right|top"
                    android:layout_column="2"
                    android:width="90dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="1dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:layout_margin="1dp">
                <Space
                    android:layout_width="20dp"
                    android:layout_height="5dp"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:layout_margin="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:text="@string/sunrise"
                    android:id="@+id/textViewSunriseEN"
                    android:layout_column="0"
                    android:gravity="left|top" android:width="90dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:text=""
                    android:id="@+id/textViewSunrise"
                    android:gravity="center_horizontal|top"
                    android:layout_column="1"
                    android:width="90dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:text="@string/sunrise_ar"
                    android:id="@+id/textViewSunriseAR"
                    android:width="90dp"
                    android:layout_column="2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="right|top"
                    android:layout_margin="1dp" />
            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">
                <Space
                    android:layout_width="20dp"
                    android:layout_height="5dp"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:layout_gravity="right"
                android:layout_margin="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:text="@string/dhuhr"
                    android:id="@+id/textViewDhuhurEN"
                    android:layout_column="0"
                    android:gravity="left|top"
                    android:width="90dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:text=""
                    android:id="@+id/textViewDhuhur"
                    android:gravity="center_horizontal|top"
                    android:layout_column="1"
                    android:width="90dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:text="@string/dhuhr_ar"
                    android:id="@+id/textViewDhuhurAR"
                    android:gravity="right|top"
                    android:width="90dp"
                    android:layout_column="2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="1dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">
                <Space
                    android:layout_width="20dp"
                    android:layout_height="5dp"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:layout_margin="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:text="@string/asr"
                    android:id="@+id/textViewAsrEN"
                    android:layout_column="0"
                    android:gravity="left|top"
                    android:width="90dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:text=""
                    android:id="@+id/textViewAsr"
                    android:gravity="center_horizontal|top"
                    android:layout_column="1"
                    android:width="90dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:text="@string/asr_ar"
                    android:id="@+id/textViewAsrAR"
                    android:width="90dp"
                    android:layout_column="2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="right|top"
                    android:layout_margin="1dp" />
            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">
                <Space
                    android:layout_width="20dp"
                    android:layout_height="5dp"/>
            </TableRow>


            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:layout_margin="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:text="@string/sunset"
                    android:layout_column="0"
                    android:gravity="left|top"
                    android:width="90dp"
                    android:id="@+id/textViewSunSetEN"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:text=""
                    android:id="@+id/textViewSunset"
                    android:gravity="center_horizontal|top"
                    android:layout_column="1"
                    android:width="90dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sunset_ar"
                    android:gravity="right|top"
                    android:width="90dp"
                    android:layout_column="2"
                    android:id="@+id/textViewSunSetAR"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_gravity="right|top"
                    android:layout_margin="1dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">
                <Space
                    android:layout_width="20dp"
                    android:layout_height="5dp"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:layout_margin="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:text="@string/maghrib"
                    android:id="@+id/textViewMaghribEN"
                    android:layout_column="0"
                    android:gravity="left|top"
                    android:width="90dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:text=""
                    android:id="@+id/textViewMaghrib"
                    android:gravity="center_horizontal|top"
                    android:layout_column="1"
                    android:width="90dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:text="@string/maghrib_ar"
                    android:id="@+id/textViewMaghribAR"
                    android:gravity="right|top"
                    android:width="90dp"
                    android:layout_column="2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="1dp" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal">
                <Space
                    android:layout_width="20dp"
                    android:layout_height="5dp"/>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal"
                android:layout_margin="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|top"
                    android:text="@string/isha"
                    android:id="@+id/textViewIshaEN"
                    android:layout_column="0"
                    android:gravity="left|top"
                    android:width="90dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|top"
                    android:text=""
                    android:id="@+id/textViewIsha"
                    android:gravity="center_horizontal|top"
                    android:layout_column="1"
                    android:width="90dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_margin="1dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top"
                    android:text="@string/isha_ar"
                    android:id="@+id/textViewIshaAR"
                    android:width="90dp"
                    android:layout_column="2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:gravity="right|top"
                    android:layout_margin="1dp" />
            </TableRow>



        </TableLayout>


</LinearLayout>
